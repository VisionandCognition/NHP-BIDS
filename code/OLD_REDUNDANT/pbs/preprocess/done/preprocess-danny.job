#PBS -lwalltime=36:00:00  
#PBS -lnodes=1:ppn=16
#PBS -S /bin/bash

n=`wc -l < $PBS_NODEFILE`
echo start of job in directory $PBS_O_WORKDIR
echo number of nodes is $n
echo the allocated nodes are:
cat $PBS_NODEFILE

module load eb
module load freesurfer
module load fsl/5.08
module load afni

source ~/.bash_profile 
source ~/.bashrc

export FSLOUTPUTTYPE=NIFTI_GZ # is this not the default?

cd ~/NHP-BIDS
./code/preprocessing_workflow_danny.py --pbs --csv ./csv/prf-danny-nodti.csv |& tee ./logs/log-preproc_danny_nodti.txt
./code/preprocessing_workflow_danny.py --pbs --csv ./csv/prf-danny-dti.csv |& tee ./logs/log-preproc_danny_dti.txt